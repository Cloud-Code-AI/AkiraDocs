{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }