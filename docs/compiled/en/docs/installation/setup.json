    {
      "id": "20",
      "type": "heading",
      "content": "Post-Installation Steps",
      "metadata": {
        "level": 2
      }
    },
    {
      "id": "21",
      "type": "paragraph",
      "content": "1. <strong>Verify Installation</strong>"
    },
    {
      "id": "22",
      "type": "code",
      "content": "npm run build\nnpm run start",
      "metadata": {
        "language": "bash",
        "showLineNumbers": true
      }
    },
    {
      "id": "23",
      "type": "paragraph",
      "content": "2. <strong>Configure Git Integration</strong>"
    },
    {
      "id": "24",
      "type": "code",
      "content": "git remote add origin your-repository-url",
      "metadata": {
        "language": "bash",
        "showLineNumbers": true
      }
    },
    {
      "id": "25",
      "type": "paragraph",
      "content": "3. <strong>Setup Content Directory</strong>"
    },
    {
      "id": "26",
      "type": "code",
      "content": "mkdir -p docs/_contents/en",
      "metadata": {
        "language": "bash",
        "showLineNumbers": true
      }
    },
    {
      "id": "27",
      "type": "heading",
      "content": "Environment-Specific Configurations",
      "metadata": {
        "level": 2
      }
    },
    {
      "id": "28",
      "type": "heading",
      "content": "Development",
      "metadata": {
        "level": 3
      }
    },
    {
      "id": "29",
      "type": "code",
      "content": "NODE_ENV=development\nDEBUG=true",
      "metadata": {
        "language": "env",
        "showLineNumbers": true
      }
    },
    {
      "id": "30",
      "type": "heading",
      "content": "Production",
      "metadata": {
        "level": 3
      }
    },
    {
      "id": "31",
      "type": "code",
      "content": "NODE_ENV=production\nDEBUG=false",
      "metadata": {
        "language": "env",
        "showLineNumbers": true
      }
    },
    {
      "id": "32",
      "type": "heading",
      "content": "Testing",
      "metadata": {
        "level": 3
      }
    },
    {
      "id": "33",
      "type": "code",
      "content": "NODE_ENV=test\nTEST_MODE=true",
      "metadata": {
        "language": "env",
        "showLineNumbers": true
      }
    }
  ]
