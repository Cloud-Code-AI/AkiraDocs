      {
        "id": "2",
        "type": "code",
        "content": "npx create-akiradocs@latest my-docs",
        "metadata": {
          "language": "bash",
          "showLineNumbers": false
        }
      },
      {
        "id": "3",
        "type": "heading",
        "content": "Basic Setup",
        "metadata": {
          "level": 2
        }
      },
      {
        "id": "4",
        "type": "list",
        "content": "1. Navigate to your project directory\n2. Install dependencies\n3. Start the development server\n4. Open http://localhost:3000",
        "metadata": {
          "listType": "ordered"
        }
      },
      {
        "id": "5",
        "type": "code",
        "content": "cd my-docs\nnpm install\nnpm run dev",
        "metadata": {
          "language": "bash",
          "showLineNumbers": true
        }
      },
      {
        "id": "6",
        "type": "heading",
        "content": "Configuration",
        "metadata": {
          "level": 2
        }
      },
      {
        "id": "7",
        "type": "paragraph",
        "content": "Configure your documentation by editing akiradocs.config.json:"
      },
      {
        "id": "8",
        "type": "code",
        "content": "{\n  \"name\": \"My Documentation\",\n  \"theme\": \"light\",\n  \"navigation\": {\n    \"enabled\": true,\n    \"position\": \"left\"\n  },\n  \"features\": {\n    \"search\": true,\n    \"darkMode\": true\n  }\n}",
        "metadata": {
          "language": "json",
          "showLineNumbers": true
        }
      },
      {
        "id": "9",
        "type": "heading",
        "content": "Environment Variables",
        "metadata": {
          "level": 2
        }
      },
      {
        "id": "10",
        "type": "code",
        "content": "NEXT_PUBLIC_API_URL=https://api.akiradocs.com\nAKIRADOCS_SECRET_KEY=your_secret_key\nAI_TRANSLATION_KEY=your_translation_key\nANALYTICS_ID=your_analytics_id",
        "metadata": {
          "language": "plaintext",
          "showLineNumbers": true
        }
      }
