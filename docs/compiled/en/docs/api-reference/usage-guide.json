    {
      "id": "13",
      "type": "code",
      "content": "// Example: Get Users\nconst response = await fetch('https://api.example.com/users', {\n  method: 'GET',\n  headers: {\n    'Authorization': 'Bearer YOUR_TOKEN'\n  }\n});\n\nconst users = await response.json();",
